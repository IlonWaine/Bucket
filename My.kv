        # Ellipse:
        #     pos: 165,930
        #     size: self.width *0.9194, self.height*0.2563
        #     # angle_start: 18  # Start angle of the ellipse (in degrees)
        #     # angle_end: 378


        Color:
            rgba: root.elipseDark  
        Ellipse:
            pos: -125,-55
            size: 251,205
        Color:
            rgba: root.elipseLite  
        Ellipse:
            pos: -14,-130
            size: 550, 201    # angle_start: 18  # Start angle of the ellipse (in degrees)
            # angle_end: 378

    BoxLayout: 
        orientation:'vertical'
        padding: 15,15,15,0
        BoxLayout:
            orientation:'vertical'
            size_hint_y: 0.95
        Label:
            text: 'Do you remember \n this word?'
            size_hint_y: 1.15
            font_size:  '36'
            halign: 'center'
            valign: 'middle'
        BoxLayout:
            orientation:'vertical'
            size_hint_y:4# 3.75
            padding:3,1,3,4

            canvas.before:
                Color:
                    rgba: root.elipseDark
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [35,35,30,30]

            BoxLayout:
                orientation:'horizontal'
                # padding:15

                canvas.before:
                    Color:
                        rgba: root.backroundColor
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [35,35,35,35]
                    Color:
                        rgba: root.secondColor
                    Line:
                        rounded_rectangle: self.x, self.y, self.width, self.height,35
                        width: 1
                Label:
                    id: mainLabel
                    text: root.activeWord
                    # size_hint_x: None  # Set the width size_hint to None
                    # size_hint_y: 2    # Set the height size_hint to 2
                    width: self.width   # Set the width explicitly
                    halign: 'center'
                    valign: 'middle'
                    font_size: root.textFit(self.width,self.height,self.text)
                    text_size: self.width, None

                
                # Button:
                #     # text:'Sound' 
                #     background_down:'Sound.png'
                #     background_normal:'Sound.png'
                #     # pos: self.parent.width-self.width/2, self.parent.height 
                #     on_release: root.callSound(root.activeWord)
                #     size_hint: 0.2 ,0.2
                #     pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                #     opacity: root.SondVisible
                #     disabled: True if root.SondVisible==0 else False
                #     # width: '70dp'
                #     # height: '40dp'

                        
        BoxLayout:
            orientation:'horizontal'
            size_hint_y:1.25
            spacing: 10
            padding:0,30,0,15
            # canvas.before:
            #     Color:
            #         rgba: root.elipseDark
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size
            Button:
                # canvas.before:
                #     Color:
                #         rgba: root.secondColor
                #     RoundedRectangle:
                #         pos: self.pos
                #         size: self.size
                #         radius: [10,10,10,10]

                # background_normal: 'Group 65.png'
                # background_color: 0,0,0,0
                background_normal:'Rectangle 1.png'
                text: 'Yes' 
                text_size: self.width*0.6, None  
                font_size: '42'
                halign: 'left'
                valign: 'middle'
                # size_hint: .4, None
                on_press: root.remember()
                Image:
                    source: 'Yes_but.png'  # Replace with your overlay image
                    size_hint: None, None  # Set the image size explicitly if needed
                    size: self.parent.width *0.25, self.parent.height*0.85  # Match the size of the image to its texture size
                    pos: (self.parent.center_x + self.width/2, self.parent.center_y - self.height / 2)
                    allow_stretch: True 
            Button:
                canvas.before:
                    Color:
                        rgba: root.secondColor
                    Rectangle:
                        pos: self.pos
                        size: self.size
                # background_normal: 'Group 65.png'
                background_color: 0,0,0,0
                text: 'No' 
                text_size: self.width*0.6, None  
                font_size: '42'
                halign: 'left'
                valign: 'middle'
                on_press: root.notRemember()
                Image:
                    source: 'No_but.png'  # Replace with your overlay image
                    size_hint: None, None  # Set the image size explicitly if needed
                    size: self.parent.width *0.25, self.parent.height*0.85  # Match the size of the image to its texture size
                    pos: (self.parent.center_x + self.width/2, self.parent.center_y - self.height / 2)
                    allow_stretch: True 
        Button:
            text: 'Show translation' 
            background_normal: 'Rectangle 1.png'
            size_hint_y:1.25
            text_size: self.width, None
            font_size: '42'
            halign: 'center'
            valign: 'middle'  
            size_hint: 1, .9
            pos_hint: {'center_x':.5}    
            on_press: root.showTranslation()
        BoxLayout:
            orientation:'vertical'
            size_hint_y:1
            padding: 0,root.height*0.02,0,0
            Button:
                # text:'Sound' 
                background_down:'Sound.png'
                background_normal:'Sound.png'
                # pos: self.parent.width-self.width/2, self.parent.height 
                on_release: root.callSound(root.activeWord)
                size_hint: 0.2 ,1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                opacity: root.SondVisible
                disabled: True if root.SondVisible==0 else False
                # width: '70dp'
                # height: '40dp'
        BoxLayout:
            orientation:'vertical'
            size_hint_y:.45
            



