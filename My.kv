<WorkScreen>:
    name: 'second'
    #activeWord: root.activeWord
    canvas.before:
        Color:
            rgba: root.backroundColor
        Rectangle:
            pos: self.pos
            size: self.size
            



        # Color:
        #     rgba: root.elipseDark  
        # Ellipse:
        #     pos: 350,828
        #     size: self.width *0.5167, self.height*0.25
        # Color:
